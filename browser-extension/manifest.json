{
  "manifest_version": 3,
  "name": "Claude Text Editor Helper",
  "version": "1.0",
  "description": "Enables Claude Text Editor shortcuts in web apps",
  "permissions": ["activeTab", "clipboardRead"],
  "content_scripts": [
    {
      "matches": ["*://docs.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "edit-with-claude": {
      "suggested_key": {
        "default": "Alt+Shift+E",
        "mac": "Alt+Shift+E"
      },
      "description": "Edit selected text with Claude"
    }
  }
}